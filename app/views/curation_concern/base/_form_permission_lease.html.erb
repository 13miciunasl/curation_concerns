<span class="form-inline">
  <span class="label label-warning">Lease</span>
  <div class="form-group">
    Is available for
    <%= f.label  :visibility_during_lease, class:"sr-only" %>
    <%= f.select :visibility_during_lease, visibility_options(:loosen), {}, {class:"form-control"} %>
  </div>
  <div class="form-group">
    until
    <%= f.label  :lease_expiration_date, class:"sr-only" %>
    <%= f.input :lease_expiration_date, wrapper: :inline, input_html: { placeholder: Date.tomorrow, class: 'input-small datepicker' } %>
  </div>
  <div class="form-group">
    then restrict it to
    <%= f.label  :visibility_after_lease, class:"sr-only" %>
    <%= f.select :visibility_after_lease, visibility_options(:restrict), {}, {class: 'form-control'} %>
  </div>
</span>