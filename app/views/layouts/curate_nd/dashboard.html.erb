<% content_for :layout_name, 'dashboard, ' %>
<% content_for :main do %>

  <div class="row">

  <% if content_for?(:sidebar) %>
    <div class="col-md-3">
      <%= yield(:sidebar) %>
    </div>

    <div class="col-md-9">
  <% else %>
    <div class="col-md-12">
  <% end %>
      <%= yield %>
    </div>

  </div>

<% end %>

<%= render template: "layouts/#{theme}" %>
